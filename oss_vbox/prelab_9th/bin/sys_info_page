#!/bin/bash

# Program to output a system information pages

title="System Information Report For $HOSTNAME"
CURRENT_TIME=$(date +"%x %r %Z")
TIMESTAMP="Generated $CURRENT_TIME, by $USER"

report_uptime () {
	echo "Function report_uptime executed."
	return
}

report_disk_space () {
	echo "Function report_disk_space executed."
	return
}

report_home_space () {
	echo "Function report_home_space executed."
	return
}

cat << _EOF_
<HTML>
	<HEAD>
		<TITLE>$title</TITLE>
	</HEAD>
	<BODY>
		<H1>$title</H1>
		<P>$TIMESTAMP</P>
		$(report_uptime)
		$(report_disk_space)
		$(report_home_space)
	</BODY>
</HTML>
_EOF_
