#!/bin/bash

# read-ifs: read fields from a file

FILE=/etc/passwd

read -p "Enter a username > " user_name

file_info=$(grep "^$user_name:" $FILE)

if [ -n "$file_info" ]; then
	IFS=":" read user pw uid gid name home shell <<< "$file_info"
	echo " 	User = 	'$user'
		UID = 	'$uid'
		GID = 	'$gid'
		Full Name = 	'$name'
		Home Dir. = 	'$hoem'
		Shell = 	'$shell'"
else
	echo "No such user '$user_name'" >&2
	exit 1
fi
